@model CandyWorld.ViewModels.CandyListViewModel

@using (Html.BeginForm())
{
    <p>
        Search Candy by Name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<h1>@Model.CurrentCategory</h1>


@foreach (var candy in Model.Candies)
{
    <partial name="_candyCard" model="candy" />
}

